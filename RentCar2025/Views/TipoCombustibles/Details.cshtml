@model RentCar.Models.TipoCombustible

@{
    ViewData["Title"] = "Detalles del Tipo de Combustible";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        /* Estilos generales */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Poppins", sans-serif;
        }

        body {
            background-image: url("website-forms-bg.jpg");
            background-size: cover;
            background-position: center;
            min-height: 100vh;
            overflow: hidden;
        }

        .home {
            position: relative;
            height: 100vh;
            width: 100%;
        }

            .home::before {
                content: "";
                position: absolute;
                height: 100%;
                width: 100%;
                background-color: rgba(0, 0, 0, 0.6);
                z-index: 100;
                opacity: 0;
                transition: opacity 0.5s ease;
            }

            .home.active::before {
                opacity: 1;
            }

        .details_container {
            position: absolute;
            max-width: 700px;
            width: 90%;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) scale(0.8);
            z-index: 101;
            background: #fff;
            padding: 40px;
            border-radius: 16px;
            box-shadow: 0 5px 25px rgba(0,0,0,0.35);
            opacity: 0;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

            .details_container.active {
                opacity: 1;
                transform: translate(-50%, -50%) scale(1);
            }

        .form_close {
            position: absolute;
            top: 10px;
            right: 20px;
            color: #0b0217;
            font-size: 22px;
            opacity: 0.7;
            cursor: pointer;
            transition: transform 0.2s, opacity 0.2s;
        }

            .form_close:hover {
                opacity: 1;
                transform: rotate(90deg);
            }

        .details_container h2 {
            font-size: 24px;
            color: #0b0217;
            text-align: center;
            margin-bottom: 30px;
            opacity: 0;
            animation: fadeIn 0.5s ease 0.3s forwards;
        }

        .details_list {
            display: grid;
            grid-template-columns: 1fr 2fr;
            gap: 20px;
            margin-bottom: 30px;
        }

        .detail_label {
            font-weight: 600;
            color: #555;
            text-align: right;
            padding-right: 15px;
            opacity: 0;
            transform: translateX(-20px);
            transition: all 0.4s ease;
        }

        .detail_value {
            font-weight: 500;
            color: #333;
            padding-left: 15px;
            opacity: 0;
            transform: translateX(20px);
            transition: all 0.4s ease;
        }

        .details_container.active .detail_label,
        .details_container.active .detail_value {
            opacity: 1;
            transform: translateX(0);
        }

        /* Specific delays for TipoCombustible Details */
        .detail_label:nth-child(1) {
            transition-delay: 0.4s;
        }

        .detail_value:nth-child(2) {
            transition-delay: 0.5s;
        }

        .detail_label:nth-child(3) {
            transition-delay: 0.6s;
        }

        .detail_value:nth-child(4) {
            transition-delay: 0.7s;
        }

        .action_buttons {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 40px;
            opacity: 0;
            transition: opacity 0.4s ease 0.8s;
        }

        .details_container.active .action_buttons {
            opacity: 1;
        }

        .btn_edit, .btn_back {
            padding: 12px 25px;
            border-radius: 8px;
            font-weight: 500;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .btn_edit {
            background: #7d2ae8;
            color: white;
        }

            .btn_edit:hover {
                background: #6825c1;
                transform: translateY(-2px);
            }

        .btn_back {
            background: #f1f1f1;
            color: #333;
        }

            .btn_back:hover {
                background: #ddd;
                transform: translateY(-2px);
            }

        .status_active {
            color: #27ae60;
            font-weight: 600;
        }

        .status_inactive {
            color: #e74c3c;
            font-weight: 600;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        @@keyframes slideIn {
            from {
                transform: translateY(20px);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }
    </style>
</head>
<body>
    <div class="home" id="home">
        <div class="details_container" id="detailsContainer">
            <span class="form_close" onclick="window.location.href='@Url.Action("Index")'">&times;</span>
            <h2>Detalles del Tipo de Combustible</h2>

            <div class="details_list">
                <div class="detail_label">@Html.DisplayNameFor(model => model.Descripcion)</div>
                <div class="detail_value">@Html.DisplayFor(model => model.Descripcion)</div>

                <div class="detail_label">@Html.DisplayNameFor(model => model.Estado)</div>
                <div class="detail_value @(Model.Estado ? "status_active" : "status_inactive")">
                    @(Model.Estado ? "Activo" : "Inactivo")
                </div>
            </div>

            <div class="action_buttons">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn_edit">
                    <i class="bi bi-pencil"></i> Editar
                </a>
                <a asp-action="Index" class="btn_back">
                    <i class="bi bi-arrow-left"></i> Volver a la lista
                </a>
            </div>
        </div>
    </div>

    <script>
        // Activar animaciones al cargar la página
        document.addEventListener('DOMContentLoaded', function() {
            const home = document.getElementById('home');
            const detailsContainer = document.getElementById('detailsContainer');

            // Pequeño retraso para asegurar que el DOM está listo
            setTimeout(() => {
                home.classList.add('active');
                detailsContainer.classList.add('active');
            }, 50);
        });
    </script>
</body>
</html>