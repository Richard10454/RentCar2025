<script>
    document.addEventListener('DOMContentLoaded', function() {
        const isInViewport = (element) => {
            const rect = element.getBoundingClientRect();
            return (
                rect.top >= 0 &&
                rect.left >= 0 &&
                rect.bottom <= (window.innerHeight || document.documentElement.clientHeight) &&
                rect.right <= (window.innerWidth || document.documentElement.clientWidth)
            );
        };

        const animateOnScroll = function() {
            const elements = document.querySelectorAll('.animate__animated');

            elements.forEach(element => {
                if (isInViewport(element) && !element.classList.contains('animated-once')) {
                    const animationClass = Array.from(element.classList).find(cls => cls.startsWith('animate__'));
                    if (animationClass) {
                        element.classList.add(animationClass);
                        element.classList.add('animated-once'); 
                    }
                }
            });
        };

        animateOnScroll();

        window.addEventListener('scroll', animateOnScroll);

        const teamCards = document.querySelectorAll('.team-card');
        teamCards.forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-10px) scale(1.02)';
                this.style.boxShadow = '0 15px 40px rgba(108, 77, 255, 0.15)'; 
            });

            card.addEventListener('mouseleave', function() {
                this.style.transform = '';
                this.style.boxShadow = '0 5px 20px rgba(0,0,0,0.05)'; 
            });
        });
    });
</script>