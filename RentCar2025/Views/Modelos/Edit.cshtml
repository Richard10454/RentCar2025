@model RentCar.Models.Modelo

@{
    ViewData["Title"] = "Editar Modelo";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        /* Estilos generales */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Poppins", sans-serif;
        }

        body {
            background-image: url("website-forms-bg.jpg");
            background-size: cover;
            background-position: center;
            min-height: 100vh;
            overflow: hidden;
        }

        .home {
            position: relative;
            height: 100vh;
            width: 100%;
        }

            .home::before {
                content: "";
                position: absolute;
                height: 100%;
                width: 100%;
                background-color: rgba(0, 0, 0, 0.6);
                z-index: 100;
                opacity: 0;
                transition: opacity 0.5s ease;
            }

            .home.active::before {
                opacity: 1;
            }

        .form_container {
            position: absolute;
            max-width: 600px;
            width: 90%;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) scale(0.8);
            z-index: 101;
            background: #fff;
            padding: 40px;
            border-radius: 16px;
            box-shadow: 0 5px 25px rgba(0,0,0,0.35);
            opacity: 0;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

            .form_container.active {
                opacity: 1;
                transform: translate(-50%, -50%) scale(1);
            }

        .form_close {
            position: absolute;
            top: 10px;
            right: 20px;
            color: #0b0217;
            font-size: 22px;
            opacity: 0.7;
            cursor: pointer;
            transition: transform 0.2s, opacity 0.2s;
        }

            .form_close:hover {
                opacity: 1;
                transform: rotate(90deg);
            }

        .form_container h2 {
            font-size: 22px;
            color: #0b0217;
            text-align: center;
            margin-bottom: 10px;
            opacity: 0;
            animation: fadeIn 0.5s ease 0.3s forwards;
        }

        /* Campos de entrada */
        .input_box {
            position: relative;
            margin-top: 30px;
            width: 100%;
            height: 50px;
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.4s ease;
        }

        /* Asignamos delays específicos por ID */
        #marcaInput {
            transition-delay: 0.4s;
        }

        #descripcionInput {
            transition-delay: 0.5s;
        }

        .form_container.active .input_box {
            opacity: 1;
            transform: translateY(0);
        }

        .input_box input,
        .input_box select {
            height: 100%;
            width: 100%;
            border: none;
            outline: none;
            padding: 0 35px;
            font-size: 16px;
            border-bottom: 2px solid #aaaaaa;
            transition: border-color 0.3s ease;
            background-color: transparent;
            appearance: none;
            -webkit-appearance: none;
            -moz-appearance: none;
        }

            .input_box input:focus,
            .input_box select:focus {
                border-color: #7d2ae8;
            }

        .input_box i {
            position: absolute;
            top: 50%;
            left: 0;
            transform: translateY(-50%);
            font-size: 20px;
            color: #707070;
            transition: color 0.3s ease;
        }

        .input_box input:focus ~ i,
        .input_box select:focus ~ i {
            color: #7d2ae8;
        }

        /* Flecha personalizada para select */
        .input_box.select-wrapper::after {
            content: '\25BC';
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            pointer-events: none;
            color: #707070;
            font-size: 14px;
        }

        /* Toggle switch */
        .toggle_switch_container {
            margin-top: 30px;
            display: flex;
            align-items: center;
            column-gap: 15px;
            font-size: 16px;
            color: #0b0217;
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.4s ease 0.6s;
        }

        .form_container.active .toggle_switch_container {
            opacity: 1;
            transform: translateY(0);
        }

        .switch {
            position: relative;
            display: inline-block;
            width: 48px;
            height: 28px;
        }

            .switch input {
                opacity: 0;
                width: 0;
                height: 0;
            }

        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: 0.4s;
            border-radius: 28px;
        }

            .slider:before {
                position: absolute;
                content: "";
                height: 20px;
                width: 20px;
                left: 4px;
                bottom: 4px;
                background-color: white;
                transition: 0.4s;
                border-radius: 50%;
            }

        input:checked + .slider {
            background-color: #7d2ae8;
        }

        input:focus + .slider {
            box-shadow: 0 0 1px #7d2ae8;
        }

        input:checked + .slider:before {
            transform: translateX(20px);
        }

        .toggle_label {
            cursor: pointer;
        }

        /* Botón */
        .form_container .button {
            font-size: 16px;
            background: #7d2ae8;
            color: #fff;
            margin-top: 40px;
            width: 100%;
            padding: 15px 0;
            border: none;
            border-radius: 12px;
            cursor: pointer;
            transition: background 0.3s, transform 0.2s;
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.4s ease 0.7s;
        }

        .form_container.active .button {
            opacity: 1;
            transform: translateY(0);
        }

        .form_container .button:hover {
            background: #6825c1;
            transform: translateY(-2px);
        }

        /* Enlace "Volver" */
        .login_signup {
            font-size: 12px;
            text-align: center;
            margin-top: 25px;
            opacity: 0;
            transition: opacity 0.4s ease 0.8s;
        }

        .form_container.active .login_signup {
            opacity: 1;
        }

        .text-danger {
            font-size: 12px;
            color: #e74c3c;
            display: block;
            margin-top: 3px;
        }

        a {
            color: #7d2ae8;
            text-decoration: none;
            transition: color 0.3s;
        }

            a:hover {
                color: #6825c1;
                text-decoration: underline;
            }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        @@keyframes slideIn {
            from {
                transform: translateY(20px);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }
    </style>
</head>
<body>
    <div class="home" id="home">
        <div class="form_container" id="formContainer">
            <span class="form_close" onclick="window.location.href='@Url.Action("Index")'">&times;</span>
            <h2>Editar Modelo</h2>

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="input_box select-wrapper" id="marcaInput">
                    <select asp-for="MarcaId" asp-items="ViewBag.MarcaId">
                        <option value="">Seleccione una marca</option>
                    </select>
                    <i class="bi bi-car-front"></i>
                    <span asp-validation-for="MarcaId" class="text-danger"></span>
                </div>

                <div class="input_box" id="descripcionInput">
                    <input asp-for="Descripcion" placeholder="Descripción del Modelo" />
                    <i class="bi bi-card-text"></i>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="toggle_switch_container">
                    <label class="switch">
                        <input asp-for="Estado" type="checkbox" id="estadoToggle" />
                        <span class="slider round"></span>
                    </label>
                    <label for="estadoToggle" class="toggle_label">Activo</label>
                </div>

                <button type="submit" class="button">Guardar Cambios</button>

                <div class="login_signup">
                    <a asp-action="Index">← Volver a la lista</a>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Activar animaciones al cargar la página
        document.addEventListener('DOMContentLoaded', function() {
            const home = document.getElementById('home');
            const formContainer = document.getElementById('formContainer');

            // Pequeño retraso para asegurar que el DOM está listo
            setTimeout(() => {
                home.classList.add('active');
                formContainer.classList.add('active');
            }, 50);
        });
    </script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>